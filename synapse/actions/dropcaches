BB=/system/xbin/busybox_synapse;

PATH=/proc/sys/vm/drop_caches;

if [ -f $1 ]; then
	if [[ ! -z "$2" ]]; then
		$BB echo "$2" > $1;
		DC=`$BB cat $PATH`;
		
		if [ "$2" -eq 1 ] && [ "$DC" -ne 3 ]; then
			$BB sync;
			$BB echo 3 > $PATH 2> /dev/null;
		fi
	fi;
	
	V=`$BB cat $1 2> /dev/null`;
		
	if [ -z "$V" ]; then $BB echo 0; else $BB echo $V; fi;
else
	$BB echo "0";
fi;
